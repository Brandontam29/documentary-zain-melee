{
    "extends": ["airbnb"],
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "commonjs": true,
        "jest": true
    },
    "rules": {
        "indent": ["error", 4],
        "react/jsx-indent": ["error", 4],
        "react/jsx-indent-props": ["error", 4],
        "no-console": [
            "error",
            {
                "allow": ["warn", "error"]
            }
        ],
        "max-len": ["error", 120],
        "arrow-body-style": ["off", "always"],
        "linebreak-style": ["error", "windows"],
        "import/prefer-default-export": "off"
    },
    "globals": {
        "__DEV__": true
    }
}
